@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout !=  null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="card mx-auto mt-5 rounded col-md-10 shadow bg-white border-0">
    <div class="card-header border-0 bg-white m-lg-0 py-0">
        <h1 class="text-center pt-4">Manage your account</h1>
    </div>
    <div class="card-body">
        <div>
            <hr />
            <div class="row">
                <div class="col-md-3 mb-4">
                    <partial name="_ManageNav" />
                </div>
                <div class="col-md-9">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @RenderSection("Scripts", required: false)
}
